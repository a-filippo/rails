<div class="container">
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li>
      <%= link_to 'Products', products_path %>
    </li>
    <li class="active"><%= @product.name %></li>
  </ol>
</div>
<div class="container">
  <h1><%= @product.name %></h1>
  <div class="row">
    <div class="col-sm-2">
      <p><b>Name</b></p>
    </div>
    <div class="col-sm-10">
      <p><%= @product.name %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <p><b>Count</b></p>
    </div>
    <div class="col-sm-10">
      <p><%= @product.count %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <p><b>Address</b></p>
    </div>
    <div class="col-sm-10">
      <p><%= @product.address %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <p><b>Delivery Date</b></p>
    </div>
    <div class="col-sm-10">
      <p><%= @product.delivery_date.strftime("%d.%m.%Y") %></p>
    </div>
  </div>
</div>







